datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  password String
  createdAt DateTime @default(now())
}

model League {
  id Int @id @default(autoincrement())
  leagueName String @unique
  owner String
  users String[]
  maxPlayers Int
  maxQueensPerTeam Int @default(3)
  createdAt DateTime @default(now())
}

model Roster {
  recordId Int @id @default(autoincrement())
  leagueName String 
  username String
  teamName String
  queens String[]
  currentPoints Int
  pointUpdates Int[]
}

model Notification {
  notifId Int @id @default(autoincrement())
  source String
  destination String 
  resolved Boolean @default(false)
  content String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Queen {
  queenId Int @id @default(autoincrement())
  franchise String
  season Int
  name String
  status String
  location String
}
